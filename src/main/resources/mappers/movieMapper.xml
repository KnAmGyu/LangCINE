<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.uilangage.langcine.admin.movie.repository.MovieRepository">
  
    <select id="getMovieByExposureScreen" resultType="com.uilangage.langcine.admin.movie.domain.Movie">
  	SELECT 
			`id`
			, `movieName`
  			, `thumbImage`
  			, `visualImage`
  			, `bannerImage`
  			, `genre`
  			, `director`
  			, `star`
  			, `story`
  			, `runningTime`
  			, `openDay`
  			, `exposure`
  			, `screening`
			, `createdAt`
			, `updatedAt`
		FROM 
			`movie`
		WHERE
		 	`screening` = 'N'
		AND
			`exposure` = 'Y'	 	
  </select>
  
  
  <select id="getMovieInfo" parameterType="int" 
   resultType="com.uilangage.langcine.admin.movie.domain.Movie">
	SELECT
		`movieName`
		, `thumbImage`
		, `visualImage`
		, `bannerImage`
		, `genre`
		, `director`
		, `star`
		, `story`
		, `runningTime`
		, `openDay`
		, `exposure`
		, `screening`
	FROM
		`movie`
	WHERE
		`id` = #{id}		  
  </select>
  
  <select id="getMovieByList" resultType="com.uilangage.langcine.admin.movie.domain.Movie">
  	SELECT 
			`id`
			, `movieName`
  			, `thumbImage`
  			, `visualImage`
  			, `bannerImage`
  			, `genre`
  			, `director`
  			, `star`
  			, `story`
  			, `runningTime`
  			, `openDay`
  			, `exposure`
  			, `screening`
			, `createdAt`
			, `updatedAt`
		FROM 
			`movie`
		WHERE
		 	`screening` = 'Y'
  </select>
  
  <select id="getMovieExpected" resultType="com.uilangage.langcine.admin.movie.domain.Movie">
  	SELECT 
			`id`
			, `movieName`
  			, `thumbImage`
  			, `visualImage`
  			, `bannerImage`
  			, `genre`
  			, `director`
  			, `star`
  			, `story`
  			, `runningTime`
  			, `openDay`
  			, `exposure`
  			, `screening`
			, `createdAt`
			, `updatedAt`
		FROM 
			`movie`
		WHERE
		 	`openDay` > NOW();
  </select>
  
  
  <select id="getMovie" resultType="com.uilangage.langcine.admin.movie.domain.Movie">
  	SELECT 
			`id`
			, `movieName`
  			, `thumbImage`
  			, `visualImage`
  			, `bannerImage`
  			, `genre`
  			, `director`
  			, `star`
  			, `story`
  			, `runningTime`
  			, `openDay`
			, `createdAt`
			, `updatedAt`
		FROM 
			`movie`
		ORDER BY 
			`id` DESC
  </select>
  
  <insert id="insertMovie" parameterType="map">
  	INSERT INTO 
  		`movie` 
  		(
  			`movieName`
  			, `thumbImage`
  			, `visualImage`
  			, `bannerImage`
  			, `genre`
  			, `director`
  			, `star`
  			, `story`
  			, `runningTime`
  			, `openDay`
  			, `exposure`
  			, `screening`
		) 
	VALUES
		(
			#{movieName}
			, #{thumbImage}
			, #{visualImage}
			, #{bannerImage}
			, #{genre}
			, #{director}
			, #{star}
			, #{story}
			, #{runningTime}
			, #{openDay}
			, #{exposure}
			, #{screening}
		)

  </insert>
  </mapper>