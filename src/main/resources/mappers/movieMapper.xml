<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.uilangage.langcine.admin.movie.repository.MovieRepository">
  <insert id="insertMovie" parameterType="map">
  	INSERT INTO 
  		`movie` 
  		(
  			`movieName`
  			, `thumbImage`
  			, `movieInfoImage`
  			, `visualImage`
  			, `bannerImage`
  			, `genre`
  			, `director`
  			, `star`
  			, `story`
  			, `runningTime`
  			, `openDay`
		) 
	VALUES
		(
			#{movieName}
			, #{thumbImage}
			, #{movieInfoImage}
			, #{visualImage}
			, #{bannerImage}
			, #{genre}
			, #{director}
			, <foreach collection="array" item="star" open="(" close=")" separator=",">
				 #{star}
				</foreach>
			, #{story}
			, #{runningTime}
			, #{openDay}
		)

  </insert>
  </mapper>